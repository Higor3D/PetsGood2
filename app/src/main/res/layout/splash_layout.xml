<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/txtTextoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto a"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTextob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto b"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/txtTextoa"/>

    <TextView
        android:id="@+id/txtTextoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto c"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@+id/txtTextoa"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTextod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTextob"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/txtTextoc"
        android:text="Texto d"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>